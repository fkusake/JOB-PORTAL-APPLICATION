  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand a1 logo" href="#"><i class="fa-solid fa-e"></i>asily</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link a1" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link a2" href="/postedjobs">Job</a>
          </li>
          <li class="nav-item dropdown">
          <% if(locals.userName){ %>
              <a class="nav-link dropdown-toggle a4 gray" id="drp" role="button" data-bs-toggle="dropdown">
                <%=locals.userName%>
              </a>
           <% }else{ %>
              <a class="nav-link dropdown-toggle a4 gray" id="drp" role="button" data-bs-toggle="dropdown">
                Dropdown
              </a>
          <% } %>

            <ul class="dropdown-menu">
             <% if(locals.userEmail){ %>
                <li><a class="dropdown-item a5" href="/logout">LOGOUT</a></li>
                <li><a class="dropdown-item a5" href="/postnewjob">POST NEW JOB</a></li>
             <% }else{ %>
                <li><a class="dropdown-item a5" href="/pagelogin">LOGIN</a></li>
                <li><a class="dropdown-item a5" href="/postnewjob">POST NEW JOB</a></li>
             <% } %>
            </ul>
          </li>
        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
